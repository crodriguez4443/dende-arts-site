---
pagination:
  data: products
  size: 1
  alias: product
  addAllPagesToCollections: true
permalink: "/{{ product.slug | slugify }}/"
layout: layout.njk
---
{% include "nav.njk" %}

{% block content %}
<div class="product-card">
  <h2>{{ product.name }}</h2>
  {% if product.images and product.images[0] %}
    <img src="{{ product.images[0].file.url }}" alt="{{ product.name }}">
  {% endif %}
  <p>{{ product.description }}</p>
  <p>Price: ${{ product.price }}</p>
</div>
{% endblock %}