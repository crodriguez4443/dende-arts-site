    .product-reviews-section {
        grid-column: 1 / -1; /* Make it full width in your main-grid if needed */
        padding: 2rem 0; /* Add some vertical spacing */
        margin-top: 2rem;
        border-top: 1px solid #eee;
        margin: 0 1rem;
    }
