---
layout: layout.njk
title: The number 1 Capoeira blog online
pagination:
  data: collections.filteredPosts
  size: 30
  alias: paginatedPosts
  addAllPagesToCollections: true
permalink: "blog/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

<!-- src/_includes/layouts/blog.njk -->
<div class="blog-page-container main-grid">
    {% include "nav.njk" %}
    <h1 class="blog-page-title"><strong>A Capoeira community blog! </strong>Thoughts, resources, and recommendations.</h1>

    {# <div class="mx-4 md:mx-20 pb-12">
        <a href="https://dendearts.com/abada-joggers">
        {% image "src/img/abada-banner3.png", "buy abada joggers", "buy-abadas", undefined, undefined, undefined %}
        </a>
    </div> #}

    <!-- Add search bar -->
    <div class="search-container">
        <input class="searchInput" type="text" id="regularSearchInput" placeholder="Search Capoeira Articles...">
    </div>

    <div class="bg-[var(--background-light)] min-h-12 px-4 py-4 mb-4">
        <div class="flex flex-col md:flex-row items-center gap-4 md: justify-center">
            <a href="https://dendearts.com/abada-joggers" class="block h-[3rem] w-[3rem] mb-[1rem] md:h-[5rem] md:w-[5rem] md:flex md:justify-end md:pr-4">
                {% image "src/img/products/abadas-stars.png", "buy abada joggers", "h-full w-full object-contain", undefined, undefined, undefined %}
            </a>
            <div class="md:pl-4">
                <a href="https://dendearts.com/abada-joggers" class="btn btn-dark md:!px-[6rem] md:!py-[1rem]" >
                    <h3 class="text-lg font-bold mb-1 text-white">Click to order your Abada Joggers</h3>
                </a>
            </div>
        </div>
        {# <p class="pt-[1.5rem] text-sm text-center">Click to order our high quality, well fitting Abadas</p> #}
    </div>
    
    {# Blog Grid #}
    <!-- blog-grid.njk -->
    <div class="blog-grid" id="blog-grid">
        {% for post in paginatedPosts %}
       
            <article class="blog-card">
                {% if post.data.coverImage %}
                    {% image 
                        "src/blog/" + post.fileSlug + "/images/" + post.data.coverImage,
                        post.data.title, 
                        "blog-featured-image"
                    %}
                {% endif %}
                
                <div class="blog-card-content">
                    <h3 class="blog-card-title">
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </h3>
                    {# {% if post.data.excerpt %}
                        <p class="blog-card-excerpt">{{ excerpt }}</p>
                    {% endif %} #}
                    
                    <a href="{{ post.url }}" class="read-more">Read More</a>
                </div>
            </article>
        {% endfor %}
    </div>


    {# Pagination Navigation #}
    <nav class="pagination" aria-label="Pagination">
        {% if pagination.href.previous %}
            <a href="{{ pagination.href.previous }}" class="pagination-link">Previous</a>
        {% endif %}

        {% for page in pagination.pages %}
            {% set pageNumber = loop.index %}
            {% if pageNumber === pagination.pageNumber + 1 %}
                <span class="pagination-link current">{{ pageNumber }}</span>
            {% else %}
                <a href="{% if loop.index0 == 0 %}/blog/{% else %}/blog/page-{{ pageNumber }}/{% endif %}" 
                class="pagination-link">
                    {{ pageNumber }}
                </a>
            {% endif %}
        {% endfor %}

        {% if pagination.href.next %}
            <a href="{{ pagination.href.next }}" class="pagination-link">Next</a>
        {% endif %}
    </nav>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const excerptElements = document.querySelectorAll('.blog-card-excerpt');
    excerptElements.forEach(el => {
        const text = el.textContent;
        if (text.length > 150) {
            el.textContent = text.substring(0, 150) + '...';
        }
    });
});
</script>