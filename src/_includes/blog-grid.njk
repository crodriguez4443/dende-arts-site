
<div class="blog-grid" id="blog-grid">
    {% for post in collections.posts %}
        <article class="blog-card">
            {% if post.data.coverImage %}
                {% image "src/img/homepage/waistband.svg", "4-way stretch", "feature-icon", undefined, undefined, undefined %}
                {% image 
                    "src/blog/5-coolest-martial-arts-2017/images/andre-hunter-359191.jpg",
                    post.data.title, 
                    "blog-featured-image" 
                %}
            {% endif %}
            
            <div class="blog-card-content">
                <h3 class="blog-card-title">
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h3>
                <!-- remove date of blog post
                <div class="blog-card-meta">
                    <time datetime="{{ post.date | htmlDateString }}">
                        {{ post.date | readableDate }}
                    </time>
                </div>
                -->
                {% if post.data.excerpt %}
                    <p class="blog-card-excerpt">{{ post.data.excerpt }}</p>
                {% endif %}
                
                <a href="{{ post.url }}" class="read-more">Read More</a>
            </div>
        </article>
    {% endfor %}
</div>
